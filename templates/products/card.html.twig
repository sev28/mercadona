<div class="card">
    <img src="{{ product.image }}" alt="test" class="card-img-top">
    <div class="card-body">
        <h5 class="card-title text-primary" >{{product.title}}</h5>
        <div class="card-title" style="font-weight: bold; font-size: 1.2rem;">
            {{product.price | number_format(0, ',', ' ')}}â‚¬/kg
            {% if product.promotion %}
                <div class="text text-warning">Promotion !</div>
            {% endif %}
        </div>
        <p class="text text-muted">{{ product.description }}</p>
        <div>
            {% for c in product.category %}
                <em class="text-muted text-primary text-italic">#{{c.wording}}</em>
            {% endfor %}
        </div>
    </div>
</div>